#modal.modal.fade(tabindex="-1",role="dialog",aria-hidden="true")
    .modal-dialog
        .modal-content
            .modal-header
                button.close(type='button',data-dismiss='modal',aria-hidden='true') &times;
                h3#modal-title {title}
                    | {#subtitle}
                    small {subtitle}
                    | {/subtitle}
            .modal-body
                p {message}
            .modal-footer
                button.btn.btn-cancel(data-dismiss="modal",aria-hidden="true")= t('app.buttons.cancel')
                button.btn.btn-confirm(class="btn-{button}") {buttonText}